{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/settings.schema.json",
  "permissions": {
    "allow": [
      "Bash(docker:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(git push --force:*)"
    ],
    "ask": [
      "Write(**/*.env)"
    ]
  }
}
